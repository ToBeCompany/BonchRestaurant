<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_for_restaurant"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:minHeight="64dp"
            android:src="@drawable/test_image_for_restaurant"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@drawable/background_for_image_card_restaurant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_for_restaurant"
            android:text="Ambrosia Hotel &amp; Restaurant"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image_for_restaurant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"/>

        <ImageView
            android:id="@+id/image_geolocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="24dp"
            android:minHeight="24dp"
            app:layout_constraintTop_toTopOf="@id/button_for_restaurant"
            app:layout_constraintBottom_toBottomOf="@id/button_for_restaurant"
            app:layout_constraintStart_toEndOf="@id/image_for_restaurant"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_frame"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_geo_position"
            android:text="kazi Deiry, Taiger Pass\nChittagong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/image_geolocation"
            app:layout_constraintBottom_toBottomOf="@id/image_geolocation"
            app:layout_constraintStart_toEndOf="@id/image_geolocation"
            app:layout_constraintEnd_toStartOf="@id/button_for_restaurant"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_for_restaurant"
            android:text="Бронь"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_for_restaurant"
            android:layout_marginTop="9dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>